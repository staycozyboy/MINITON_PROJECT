<!DOCTYPE html>
<html>
  <head>
    <title>MINITON PROJECT</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
  </head>

  <body class="bg-light">
  <div class="row bg-white">
    <div class="col-2">
    </div>
    <div class="d-flex flex-column align-items-stretch col-8 nav-white">
      <nav class="navbar navbar-expand-lg navbar-light d-flex justify-content-between nav-white">
        <%= link_to image_tag("insta_logo.png", border: 0, class: "logo1"), root_path, class: "navbar-brand"%>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>

      <%= link_to image_tag("seacrh.JPG", border: 0, class: "search_logo"), root_path, class: "navbar-brand"%>
    
      <ul class="navbar-nav" style="margin:0px;">
      <div class="d-flex">
        <li class="nav-item">
        <%= link_to '게시판', posts_path, class: "nav-link btn btn-primary btn-board"%>
      </li>
          <div class="lil-space">
          </div>
          <%if user_signed_in?%>
          <li class="nav-item">
            <%= link_to "#{current_user.user_name}", posts_blog_path, class: "nav-link name"%>
          </li>
          <li class="nav-item">
        <%= link_to '로그아웃', destroy_user_session_path, method: :delete, class: "nav-link btn_login"%>
          </li>
          <%else%>
          <li class="nav-item">
            <%= link_to '로그인', user_session_path, method: :post, class: "nav-link btn_login"%>
          </li>
        <%end%>
      </nav>
    </div>
    <div class="col-2">
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-1">
      </div>
      <div class="col-10">
        <%= yield %>
      </div>
      <div class="col-1">
        
      </div>
  </body>
</html>
