

<h1>Searched_Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>작성자</th>
      <th>내용</th>
      <th>Posted at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to "#{post.user.user_name}", posts_blog_path(user_id: post.user.id)%></td>
        <td><%= render_with_hashtags(post.content) %></td>
        <td><%= post.created_at%></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>